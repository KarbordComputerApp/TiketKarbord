
@{
    ViewBag.Title = "AddAdoc_New";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="form-inline">
                    <strong id="TitleHeaderSanad" style="margin-left: 5px; margin-right: 5px;"></strong>
                    <strong data-bind="text:translate('سند به شماره')" id="textnumberSanad" style="margin-left: 5px; margin-right: 5px;"></strong>
                    <lable id="docnoout"></lable>

                    <div class="input-group" style="margin-right: 10px;">
                        <div class="input-group-addon">
                            <span class="input-group-btn">
                                <a id="btntarikh"><img src="~/Content/img/list/calendar.png" width="16" height="16" /></a>
                            </span>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="tarikh" data-bind="value:DocDate,attr:{placeholder:translate('تاریخ')}" class="form-control date focused fix" type="text" maxlength="10" style="text-indent: 5px;width: 100px;text-align: center;">
                            </div>
                        </div>
                    </div>

                    <div id="ViewAMode">
                        <div class="form-inline" style="margin-left: 5px; margin-right: 5px;">
                            <div class="form-group  col-md">
                                <select id="modeCode" data-bind="options: AModeList,
                                   optionsText: function(item) {return item.Name},
                                   optionsValue: 'Code',
                                   value: AModeCode"></select>
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="form-inline" style="margin-left: 5px; margin-right: 5px;">
                            <div class="form-group col-md">
                                <select id="status" data-bind="options: StatusList,
                                         optionsText: 'Status',
                                         optionsValue: 'Status',
                                         value: StatusSanad"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm" id="ViewSpec">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="Spec" class="form-control string autocomplete" data-bind="value:Spec" />
                                <label class="form-label active" data-bind="text:translate('ملاحظات')"></label>
                            </div>
                        </div>
                    </div>
                    <div id="buttom-header-dropdown" class="row header-dropdown m-r--5">
                        <a id="Print_SanadHesab" style="margin-left: 10px;">
                            <img src="/Content/img/sanad/streamline-icon-print-text@48x48.png" width="20" height="20">
                        </a>
                        <a id="OtherField" class="dropdown-toggle" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#modal-OtherField" style="margin-left: 10px;">
                            <img src="~/Content/img/sanad/paper-write.png" width="20" height="20" />
                        </a>
                        <a id="AddNewSanad">
                            <img src="~/Content/img/sanad/streamline-icon-pencil-write-3-alternate@48x48.png" width="20" height="20" />
                        </a>
                    </div>
                </div>


            </div>
            <div class="body">
                <form class="clearfix">
                    <div class="row ">


                    </div>
                </form>



                <div id="data-grid">
                    <div id="gridContainer"></div>
                </div>

            </div>
        </div>

    </div>
</div>




<div class="modal fade" id="modal-FinalSave" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 600px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 id="titleFinalSave"></h4>
                <a id=""></a>
            </div>
            <div class="modal-body">
                <div id="BodyTestDocB" style="height:400px;overflow:auto;border: 1px #ddd solid;border-radius: 20px;">


                </div>
                <br />
                <div>
                    <div class="row  form-inline ">
                        <div class="col-md-6 row">
                            <div style="margin-right: 0px;margin-left: 0px;">
                                <div id="ShowCountWarning" class="row" style="padding-bottom:5px;">
                                    <img src="~/Content/img/Warning.jpg" width="22" height="22" style="margin-left:5px;" /> <p><span data-bind="text:translate('هشدار') + ' : '"></span> <span id="CountWarning">1</span> <span data-bind="text:translate('مورد')"></span> </p>
                                </div>

                                <div id="ShowCountError" class="row">
                                    <img src="~/Content/img/Error.jpg" width="22" height="22" style="margin-left:5px;" /><p><span data-bind="text:translate('خطا') + ' : '"></span> <span id="CountError">0</span> <span data-bind="text:translate('مورد')"></span> </p>
                                </div>
                            </div>
                        </div>

                        <!-- <div class="col-md-6 ">
                            <div>
                                <p style="text-align: center;">سند دارای هشدار است ! میتوانید سند را ذخیره کنید</p>
                                <p style="text-align: center;">یا با زدن کلید بازگشت هشدارها را اصلاح کنید</p>
                            </div>
                        </div>-->

                        <div class="col-md-6">
                            <button data-bind="text:translate('بازگشت')" type="button" data-dismiss="modal" aria-label="Close" class="btn btn-primary pull-left" style="margin-right: 8px; width:100px; background-color: #eb8121 !important;"></button>
                            <button data-bind="text:translate('ذخیره')" type="button" id="FinalSave-Modal" class="btn btn-primary pull-left" style="background-color: #eb8121 !important;width:100px;"></button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>




@section scripts{
    <script type="text/javascript">
        sessionStorage.urlADocH = '@Url.Action("Index", "AFISanad")';

        $('#btntarikh').MdPersianDateTimePicker({
            targetTextSelector: '#tarikh',
            dateFormat: 'yyyy-MM-dd',
            Placement: 'bottom', // default is 'bottom'
            Trigger: 'focus', // default is 'focus',
            EnableTimePicker: true, // default is true,
            TargetSelector: '', // default is empty,
            GroupId: '', // default is empty,
            ToDate: false, // default is false,
            FromDate: false, // default is false,
            isGregorian: lang == 'en' ? true : false,
            englishNumber: lang == 'en' ? true : false,

        });

        //'use strict';
        $(function () {
            $('.dd').nestable();
            $('.dd').on('change', function () {
                var $this = $(this);
                var serializedData = window.JSON.stringify($($this).nestable('serialize'));
                $this.parents('div.body').find('textarea').val(serializedData);
            });
        });
    </script>

    <script src="~/Scripts/AFISanad_New.js?dt=@(WebKarbord.Controllers.Unit.UnitPublic.titleVerNumber)"></script>
}

