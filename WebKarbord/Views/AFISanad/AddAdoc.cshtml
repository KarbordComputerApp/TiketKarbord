@{
    ViewBag.Title = "AddIdoc";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="form-inline">
                    <strong id="TitleHeaderSanad" style="margin-left: 5px; margin-right: 5px;"></strong>
                    <strong id="textnumberSanad" style="margin-left: 5px; margin-right: 5px;">به شماره</strong>
                    <lable id="docnoout">جدید</lable>

                    <div class="input-group" style="margin-right: 10px;">
                        <div class="input-group-addon">
                            <span class="input-group-btn">
                                <a id="btntarikh"><img src="~/Content/img/list/calendar.png" width="16" height="16" /></a>
                            </span>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="tarikh" data-bind="value:DocDate" class="form-control date focused fix" type="text" maxlength="10" style="text-indent: 5px;width: 100px;text-align: center;" placeholder="تاریخ">
                            </div>
                        </div>
                    </div>

                    <div class="row header-dropdown m-r--5">
                        <a id="" style="margin-left: 10px;">
                            <img src="~/Content/img/sanad/streamline-icon-print-text@48x48.png" width="24" height="24" />
                        </a>
                        <a id="NewSanad">
                            <img src="~/Content/img/sanad/streamline-icon-pencil-write-3-alternate@48x48.png" width="24" height="24" />
                        </a>
                    </div>
                </div>

            </div>
            <div class="body">
                <form class="clearfix">
                    <div class="row ">

                        <div class="col-sm-3" id="ViewAMode">
                            <div class="form-inline" style="margin-left: 5px; margin-right: 5px;">
                                <span class="col-md-3">
                                    نوع سند
                                </span>
                                <div class="form-group  col-md-9">
                                    <select id="AMode" data-bind="options: AModeList,
                                   optionsText: function(item) {return item.Name},
                                   optionsValue: 'Code',
                                   value: AModeCode"></select>
                                </div>

                            </div>
                        </div>

                        <div class="col-sm-9" id="ViewSpec">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="Spec" class="form-control string" data-bind="value:Spec" />
                                    <label class="form-label active">ملاحظات</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
                <div id="TableSanad" style="height:300px;overflow:auto;">

                </div>

                <a id="btnAcc" class="dropdown-toggle" data-toggle="modal" data-target="#modal-Acc">
                    test
                </a>
                <a class="col-md-12" id="insertband" data-bind="click:ButtonADocH" style="color: #fdfdfd;">
                    <img src="~/Content/img/sanad/streamline-icon-add-circle-bold@48x48.png" width="16" height="16" />
                    <label>سطر جدید</label>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-Acc" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">لیست حساب ها</h4>
                <a id="refreshacc">
                    <img src="~/Content/img/list/streamline-icon-synchronize-arrows-1@48x48.png" width="24" height="24" style="margin-left: 10px;" />
                </a>
            </div>
            <div class="modal-body">
                <br />
                <div style="height:420px;overflow:auto;border: 1px #ddd solid;">
                    <table class="table table-hover table-striped">
                        <thead style="cursor: pointer;">
                            <tr data-bind="click: sortTableAcc">
                                <th data-column="Code">
                                    کد
                                    <span data-bind="attr: { class: currentColumn() == 'Code' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeCode }"></i>
                                    </span>
                                </th>
                                <th data-column="Name">
                                    نام
                                    <span data-bind="attr: { class: currentColumn() == 'Name' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeName }"></i>
                                    </span>
                                </th>
                                <th data-column="Spec">
                                    ملاحظات
                                    <span data-bind="attr: { class: currentColumn() == 'Spec' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeSpec }"></i>
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: currentPageAcc" data-dismiss="modal" style="cursor: default;">
                            <tr data-bind="click: $parent.selectAcc">
                                <td data-bind="text: Code"></td>
                                <td data-bind="text: Name"></td>
                                <td data-bind="text: Spec"></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #efb68399;">
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAcc0, valueUpdate: 'afterkeydown'" type="text" class="form-control intandline" style="height: 2.4rem;" /> </td>
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAcc1, valueUpdate: 'afterkeydown'" type="text" class="form-control" style="height: 2.4rem;" /> </td>
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAcc2, valueUpdate: 'afterkeydown'" type="text" class="form-control" style="height: 2.4rem;" /> </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-inline">
                            <label>نمایش</label>
                            <div class="form-group" style="text-align: center; width: 50px;  margin: 5px;">
                                <select id="pageSizeSelector" class="selectorange" data-bind="value: pageSizeAcc">
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="40">40</option>
                                    <option value="50">50</option>
                                    <option value="60">60</option>
                                    <option value="70">70</option>
                                    <option value="80">80</option>
                                    <option value="90">90</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <label>رکورد در هر صفحه</label>
                        </div>
                    </div>
                    <div class="col-md-6" style="text-align: left; margin-top: 10px;">
                        <a data-bind="click: firstPageAcc">
                            <img src="~/Content/img/list/streamline-icon-navigation-first.png" width="14" height="14" />
                        </a>
                        <a data-bind="click: previousPageAcc">
                            <img src="~/Content/img/list/streamline-icon-navigation-back.png" width="14" height="14" style="margin: 0px 5px 0px 5px;" />
                        </a>
                        <b data-bind="text: currentPageIndexAcc() + 1" style="margin: 0px 5px 0px 5px; color: #ec8121;"></b>
                        <a data-bind="click: nextPageAcc">
                            <img src="~/Content/img/list/streamline-icon-navigation-next.png" width="14" height="14" style="margin: 0px 5px 0px 5px;" />
                        </a>
                        <a data-bind="click: lastPageAcc">
                            <img src="~/Content/img/list/streamline-icon-navigation-last.png" width="14" height="14" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal modal-info fade" id="modal-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">آیا بند حذف شود</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info">انتخاب</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        sessionStorage.urlADocH = '@Url.Action("Index", "AFISanad")';
        $('#btntarikh').MdPersianDateTimePicker({
        targetTextSelector: '#tarikh',
        dateFormat: 'yyyy-MM-dd'
        });

        //'use strict';
        $(function () {
            $('.dd').nestable();
            $('.dd').on('change', function () {
                var $this = $(this);
                var serializedData = window.JSON.stringify($($this).nestable('serialize'));
                $this.parents('div.body').find('textarea').val(serializedData);
            });
        });

    </script>
    <script src="~/Content/new/js/form.min.js"></script>
    <script src="~/Scripts/AFISanad.js"></script>
}
