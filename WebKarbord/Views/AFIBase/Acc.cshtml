                                    <option value="0" data-bind="text:translate('فعال')"></option>
                                    <option value="1" data-bind="text:translate('غیر فعال')"></option>
                                </select>
                            </div>


                            <div class="col-sm">
                                <div class="form-group form-float" id="P_EMail">
                                    <div class="form-line focused fix">
                                        <input type="text" id="EMail" class="form-control autocomplete" />
                                        <label class="form-label" data-bind="text:translate('پست الکترونیکی')"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-12">
                                <div class="form-group form-float" id="P_Mobile">
                                    <div class="form-line focused fix">
                                        <input type="text" id="Mobile" class="form-control autocomplete" />
                                        <label class="form-label" data-bind="text:translate('موبایل')"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row form-line">
                            <div class="form-line col-md-4 col-sm-12">
                                <select id="NextLevelFromZAcc" style="margin-bottom: 23px;">
