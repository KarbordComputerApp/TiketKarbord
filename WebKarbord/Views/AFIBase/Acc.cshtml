                                <span class="col-md" data-bind="text:translate('ماهیت')"></span>
                                <select id="Mahiat" class="col-md-8 col-sm-10">
                                    <option value="0" data-bind="text:translate('هیچکدام')"></option>
                                    <option value="1" data-bind="text:translate('بدهکار')"></option>
