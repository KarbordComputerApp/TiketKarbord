@using WebKarbord.Controllers.Unit;
@{
    ViewBag.Title = "لیست حساب ها";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="form-inline focused">
                    <strong style="margin-left: 5px; margin-right: 5px;">لیست حساب ها</strong>

                    <div class="row header-dropdown m-r--5">
                        <a id="SettingColumn" class="">
