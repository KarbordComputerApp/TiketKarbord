                                    <option value="1" data-bind="text:translate('دارای سطح بعدی هنگام ثبت سند')"></option>
                                </select>
                            </div>


                            <div class="col-md-8 col-sm-12" id="P_ZGru">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <a id="btnZGru" class="dropdown-toggle" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#modal-ZGru">
                                            <img src="/Content/img/list/SearchKala.png" data-bind="attr: {title:text_Select}" class="icon" height="20" width="20">
                                        </a>
                                    </div>

                                    <div class="form-group form-float">
                                        <div class="form-line focused fix">
                                            <input id="nameZGru" class="form-control" readonly />
                                            <label class="form-label" data-bind="text:translate('گروه زیر حساب ها')"> </label>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <div class="row form-line">
                            <div class="form-line col-md-2 col-sm-12">
                                <select id="Arzi">
                                    <option value="0" data-bind="text:translate('بدون ارز')"></option>
                                    <option value="1" data-bind="text:translate('دارای ارز')"></option>

                                </select>
                            </div>

                            <div class="form-line col-md-2 col-sm-12">
                                <select id="Mkz">
                                    <option value="0" data-bind="text:translate('بدون مرکز هزینه')"></option>
                                    <option value="1" data-bind="text:translate('دارای مرکز هزینه')"></option>

                                </select>
                            </div>

                            <div class="form-line col-md-2 col-sm-12">
                                <select id="Opr">
                                    <option value="0" data-bind="text:translate('بدون پروژه')"></option>
                                    <option value="1" data-bind="text:translate('دارای پروژه')"></option>

                                </select>
                            </div>

                            <div class="form-line col-md-2 col-sm-12" style="margin-bottom:1px">
                                <select id="Amount">
                                    <option value="0" data-bind="text:translate('بدون مقدار')"></option>
                                    <option value="1" data-bind="text:translate('دارای مقدار')"></option>
                                </select>
                            </div>

                            <div class="form-line col-md-4 col-sm-12" id="P_Amount">
                                <div class="row form-line">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group form-float" style="margin-bottom:0px">
                                            <div class="form-line focused fix">
                                                <input type="text" id="Vahed" class="form-control autocomplete" />
                                                <label class="form-label" data-bind="text:translate('واحد')"></label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group form-float" style="margin-bottom:0px">
                                            <div class="form-line focused fix">
                                                <input type="text" id="Deghat" class="form-control autocomplete" />
                                                <label class="form-label" data-bind="text:translate('دقت اعشار')"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>




                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <textarea data-bind="attr:{placeholder:translate('توضیحات تکمیلی')}" rows="12" id="AccComm" class="form-control no-resize auto-growth autocomplete" placeholder="" style="margin-top: 10px;"></textarea>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div>
                <div class="row  form-inline ">
                    <div class="col-md-9 row">

                    </div>

                    <div class="col-md-3">
                        <button data-bind="text:translate('ذخیره')" type="button" id="saveAcc" class="btn btn-primary  pull-left" style=" margin-left: 8px; margin-right: 8px;"><i class="fa fa-sign-in fa-lg fa-fw"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modal-AGru" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button data-bind="attr: {title:text_Close}" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" data-bind="text:translate('لیست گروه حساب ها')"></h4>
                <a id="refreshAGru" >
                    <img data-bind="attr: {title:text_Refresh}" src="~/Content/img/list/streamline-icon-synchronize-arrows-1@48x48.png" width="20" height="20" style="margin-left: 10px;" />
                </a>
            </div>
            <div class="modal-body">
                <br />
                <div style="height:400px;overflow:auto;border: 1px #ddd solid;">
                    <table class="table table-hover table-striped tableFixList">
                        <thead style="cursor: pointer;">
                            <tr data-bind="click: sortTableAGru">
                                <th data-column="SortCode">
                                    <span data-column="SortCode" data-bind="text:translate('کد')"></span>
                                    <span data-bind="attr: { class: currentColumn() == 'SortCode' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeCode }"></i>
                                    </span>
                                </th>
                                <th data-column="SortName">
                                    <span data-column="SortName" data-bind="text:translate('نام')"></span>
                                    <span data-bind="attr: { class: currentColumn() == 'SortName' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeName }"></i>
                                    </span>
                                </th>
                                <th data-column="Spec"><span data-column="Spec" data-bind="text:translate('ملاحظات')"></span>
                                    <span data-bind="attr: { class: currentColumn() == 'Spec' ? 'isVisible' : 'isHidden' }">
                                        <i data-bind="attr: { class: iconTypeSpec }"></i>
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: currentPageAGru" data-dismiss="modal" style="cursor: default;">
                            <tr data-bind="click: $parent.selectAGru">
                                <td data-bind="text: Code"></td>
                                <td data-bind="text: Name" class="ellipsis"></td>
                                <td data-bind="text: Spec" class="ellipsis"></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #efb68399;">
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAGru0, valueUpdate: 'afterkeydown'" type="text" class="form-control intandline" style="height: 2.4rem;" /> </td>
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAGru1, valueUpdate: 'afterkeydown'" type="text" class="form-control" style="height: 2.4rem;" /> </td>
                                <td style="padding: 0px 3px;"><input data-bind="value: filterAGru2, valueUpdate: 'afterkeydown'" type="text" class="form-control" style="height: 2.4rem;" /> </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-inline">
                            <label data-bind="text:translate('نمایش')"></label>
                            <div class="form-group" style="text-align: center; width: 50px;  margin: 5px;">
                                <select id="pageSizeSelector" class="selectorange" data-bind="value: pageSizeAGru">
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="40">40</option>
                                    <option value="50">50</option>
                                    <option value="60">60</option>
                                    <option value="70">70</option>
                                    <option value="80">80</option>
                                    <option value="90">90</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <label data-bind="text:translate('رکورد در هر صفحه')"></label>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-8 panel_Arrow" style="text-align: left; margin-top: 10px;">
                        <a data-bind="click: firstPageAGru">
                            <img  class="firstPage-img" data-bind="attr: {title:text_FirstPage}" src="~/Content/img/list/streamline-icon-navigation-first.png" width="14" height="14" />
                        </a>
                        <a data-bind="click: previousPageAGru">
                            <img class="previousPage-img" data-bind="attr: {title:text_PreviousPage}" src="~/Content/img/list/streamline-icon-navigation-back.png" width="14" height="14" style="margin: 0px 5px 0px 5px;" />
                        </a>
                        <b data-bind="text:PageIndexAGru(currentPageIndexAGru() + 1)" style="margin: 0px 5px 0px 5px; color: #ec8121;"></b>
                        <a data-bind="click: nextPageAGru">
                            <img class="nextPage-img" data-bind="attr: {title:text_NextPage}" src="~/Content/img/list/streamline-icon-navigation-next.png" width="14" height="14" style="margin: 0px 5px 0px 5px;" />
                        </a>
                        <a data-bind="click: lastPageAGru">
                            <img class="lastPage-img" data-bind="attr: {title:text_LastPage}" src="~/Content/img/list/streamline-icon-navigation-last.png" width="14" height="14" />
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



<div class="modal fade" id="modal-OtherField" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="max-width:750px;">
        <div class="modal-content" style="/*padding-right: 30px;padding-left: 30px;padding-bottom: 20px;padding-top: 20px;*/">
            <div class="modal-header" style="padding-bottom: 5px;">
                <button data-bind="attr: {title:text_Close}" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 data-bind="text:translate('مشخصات اضافی')" class="modal-title" style="color:#ed882e"></h4>
                <a id=""></a>
            </div>
