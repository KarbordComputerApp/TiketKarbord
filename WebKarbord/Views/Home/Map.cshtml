
@{
    ViewBag.Title = "نقشه";
    Layout = "~/Views/Shared/_LayoutMap.cshtml";
}

<input type="hidden" id="altitude" data-value="@ViewBag.Altitude" />
<input type="hidden" id="latitude" data-value="@ViewBag.Latitude" />


<div id="ContentLocation" style="width:100%;height:100vh"></div>


<div class="modal fade" id="modal-SaveLocation" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 5px;">
                <button data-bind="attr: {title:text_Close}" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">ذخیره موقعیت مکانی</h4>
                <a></a>
            </div>
            <div class="modal-body">
                <table style="margin-top: 10px;" class="table-hover">
                    <tbody>
                        <tr style="border: #dddddd 1px solid; background-color: antiquewhite;">
                            <td>آدرس قبل</td>
                            <td id="Location_LastAddr">دورود </td>
                        </tr>

                        <tr style="border: #dddddd 1px solid; background-color: aliceblue;">
                            <td>آدرس جدید</td>
                            <td id="Location_NewAddr">تهران</td>
                        </tr>


                        <tr style="border: #dddddd 1px solid; background-color: aliceblue;">
                            <td>ارتفاع</td>
                            <td id="Location_Altitude">52.333</td>
                        </tr>

                        <tr style="border: #dddddd 1px solid; background-color: aliceblue;">
                            <td>عرض جغرافیایی</td>
                            <td id="Location_Latitude">35.69</td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <div style="margin-top: 10px;">
                <div class="row  form-inline ">
                    <div class="col-md-9 row">
                        <input id="ChangeAddrLocation" type="checkbox">
                        <label for="ChangeAddrLocation" style="margin-right: 5px;margin-top: 3px;">ذخیره آدرس جدید</label>
                    </div>
                    <div class="col-md-3">
                        <button data-bind="text:translate('ذخیره')" type="button" id="SaveLocation" class="btn btn-primary  pull-left" style=" margin-left: 8px; margin-right: 8px;">ذخیره</button>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>




@section scripts{
    <script src="~/Scripts/Map.js?dt=@(WebKarbord.Controllers.Unit.UnitPublic.titleVerNumber)"></script>
}

