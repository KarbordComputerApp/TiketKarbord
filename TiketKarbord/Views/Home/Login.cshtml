@{
    ViewBag.Title = "کاربرد کامپیوتر";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="row">
    <div class="col-lg-6 PanelLeftLogin d-none d-lg-block">
        <div class="row" style="text-align:center;">
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
            </div>

            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                <img id="LogoLogin" src="~/Content/img/Login/LogoLogin.png" style="padding: 35% 20% 0% 20%; max-width:100%" />
                <div style="padding: 35% 20% 0% 20%;">
                    <p style="color: #fefefe;" data-bind="text:'کلیه حقوق این نرم افزار متعلق به شرکت مهندسی کاربرد کامپیوتر بوده و هر گونه نسخه برداری پیگرد قانونی دارد'" >
                        
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 " id="datalogin">

        <div class="row">
            <div class="col-lg-4 col-md-3 col-sm-2 col-xs-2">
            </div>

            <div class="col-lg-4 col-md-6 col-sm-8 col-xs-8">

                <div class="login-form" style="direction:rtl; padding-top: 100%">
                    <!--padding: 40% 30% 0% 30%;-->
                    <div class="col-sm-12">
                        <div class="form-group form-float ">
                            <div class="form-line focused fix">
                                <input type="text" id="user" class="form-control" data-bind="attr:{placeholder:'نام کاربری'}" style="border-bottom: 1px solid #ec8121;text-indent: 20px;direction: rtl; color: #f3f4f3;" />
                                <img class="form-label" src="~/Content/img/Login/streamline-icon-single-man@48x48.png" width="16" height="16" />
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line focused fix">
                                <input type="password" id="pass" class="form-control" data-bind="attr:{placeholder:'کلمه عبور'}" style="border-bottom: 1px solid #ec8121;text-indent: 20px;direction: rtl; color: #f3f4f3;"  />
                                <img class="form-label" src="~/Content/img/Login/streamline-icon-lock-5@48x48.png" width="16" height="16" />
                            </div>
                        </div>
                    </div>

                    <br />
                    <br />

                    <div class="form-group btn-container">
                        <button type="button" class="btn btn-primary btn-block" data-bind="click:LoginUser , text:'ورود'" id="Login" style="background-color: #eb8121 !important;"></button>
                    </div>

                    <div class="form-group" style="padding-top:100px;text-align: center;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


